<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.chatwithfx.ChatController">
   <TextArea fx:id="chatArea" disable="true" editable="false" prefHeight="250" wrapText="true">
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
      </VBox.margin></TextArea>
   <TextField fx:id="messageField" prefHeight="25.0" prefWidth="460.0" promptText="Input message">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
      </VBox.margin></TextField>
   <Button onAction="#sendButtonAction" text="Send">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin></Button>
</VBox>